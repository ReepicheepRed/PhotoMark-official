<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/iPoster_font_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_30px"
        app:srcCompat="@mipmap/ic_point_tb" />

    <TextView
        android:id="@+id/iPoster_font_tv"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/text_7c_c"
        android:textSize="@dimen/text_26px" />

    <ProgressBar
        android:id="@+id/iPoster_font_pb"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_font_download"
        android:indeterminate="false"
        android:layout_margin="@dimen/margin_30px" />

</LinearLayout>