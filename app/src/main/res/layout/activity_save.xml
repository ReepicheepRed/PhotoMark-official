<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_36_c"
    android:orientation="vertical">

    <include
        layout="@layout/actionbar_base"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/save_iv"
        android:layout_width="@dimen/height_422px"
        android:layout_height="@dimen/height_630px"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_40px"
        android:layout_marginTop="@dimen/margin_38px"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_88px"
        android:background="@color/gray_3fe_c"
        android:drawableLeft="@mipmap/ic_saved_tb"
        android:drawablePadding="@dimen/margin_36px"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/margin_272px"
        android:text="@string/save_tip"
        android:textColor="@color/gray_93_c"
        android:textSize="@dimen/text_32px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_40px"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/save_facebook"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_fabook_link" />

        <ImageView
            android:id="@+id/save_twitter"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_twtter_link" />

        <ImageView
            android:id="@+id/save_ins"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_ins_link" />

        <ImageView
            android:id="@+id/save_pins"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_pins_link" />

        <ImageView
            android:id="@+id/save_line"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@mipmap/ic_line_link" />
    </LinearLayout>

    <Button
        android:id="@+id/save_another_btn"
        android:layout_width="@dimen/height_430px"
        android:layout_height="@dimen/height_88px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_60px"
        android:background="@drawable/ic_continue_btn"
        android:text="@string/new_poster"
        android:textAllCaps="false"
        android:textColor="@color/dark_1_c"
        android:textSize="@dimen/text_32px" />

</LinearLayout>

